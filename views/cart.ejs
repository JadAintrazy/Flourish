<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="cart.css">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,1,0" />
    <title>Cart</title>
</head>

<body>
    <div class="header">
        <div class="leftHeader">
            <img src="logobold.png" class="logo" height="120px" padding-top="-5px">
        </div>

        <div class="headerMiddle">
            <ul class="options">
                <form action="/" method="get">
                    <li><button>Home</button></li>
                </form>
                <!-- <form action="/" method="get">
              <li><button>Book An Appointment</button></li>
            </form> -->
                <form action="/shop" method="get">
                    <li><button class="tab">Shop</button></li>
                </form>
                <form action="/news" method="get">
                    <li><button>News</button></li>
                </form>
            </ul>
        </div>
        <div class="headerRight">
            <form action="/shop" method="get"><button>
                    <span class="material-symbols-outlined">
                        arrow_back
                    </span>
                </button></form>
        </div>
    </div>

    <div class="products-container">
        <% if (Cart===null || Cart.length==0) {%>
            <img class="empty"
            src="cart-empty.jpg" width="40%" height="450px" margin-left="50px"> 

        <%} else {%>
            <%  var total = 0;
                for(let i = 0; i < Cart.length; i++){
               
                %>
        <div class="products-list">
            
                    <form action="" method="get"><button><img src="data:image/<%=Cart[i].image.contentType%>;base64,<%=Cart[i].image.data.toString('base64')%>" class="preview"
                                 height= "200px" width="250px"></button></form>
                    <div class="flex-div">
                        <div class="space-div">
                            <% var price = Cart[i].price; %>
                            <% total += price * Cart[i].quantity; %> 
                            
                            <p><%= Cart[i].name %> </p>
                        </div>
                        <div class="products-info">
                            
                            <p> Quantity: <%= Cart[i].quantity %><br><br><br>
                                Price: $<%= Cart[i].price %></p>
                                
                        </div>
                    </div>
                    
        </div>
        <%}%> 
    </div>

    <div class="total-container">
        <div class="left">
            <p></p>
        </div>
        <div class="total">
            <p>Total: $<%= total%> </p>
        </div>
    </div>

    <div class="checkout">
        <form action="/checkout" method="post">
            <button>Check out</button>
        </form>
    </div>
    <%}%>  

    <br><br> <br>
    <footer id="footer">
        <br>
        <h2 class="footertxt">Contact Us!</h2>

        <div class="Fcontainer">
            <div class="Fleft">
                <p></p>
            </div>
            <div class="Fcenter">
                <div>
                    <a href="https://www.instagram.com/"><img src="instagram.png" width="30px" height="30px"></a>
                </div>

                <div>
                    <a
                        href="https://www.google.com/maps/place/23+Ainslie+St+N,+Cambridge,+ON+N1R+3J3,+Canada/@43.3595651,-80.3140144,19z/data=!3m1!4b1!4m5!3m4!1s0x882c77b649b37c39:0x61983b59b39b9367!8m2!3d43.3595651!4d-80.3134672">
                        <img src="map.png" width="30px" height="30px">
                    </a>
                </div>

                <div><a href="tel:+96176911883"><img src="telephone-call.png" width="30px" height="30px"></a>
                </div>

                <div>
                    <a href="https://www.snapchat.com/">
                        <img src="snapchat.png" width="30px" height="30px">
                    </a>
                </div>

            </div>
            <div class="Fright">
                <p></p>
            </div>

        </div>
        <br>
    </footer>
</body>

</html>